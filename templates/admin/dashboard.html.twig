{% extends '@EasyAdmin/layout.html.twig' %}

{% block content_title %}
    <div class="text-center">Manage your formations</div>
{% endblock %}
{% block main %}
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th>{{ 'Company'|trans }}</th>
                    <th class="text-center">{{ 'Count contracts'|trans }}</th>
                    <th class="text-end">{{ 'Total amount'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for company in contractsCompany %}
                    <tr>
                        <td>
                            <img class="bg-white border rounded mr-5" src="{{ asset('uploads/pictures/' ~ company.picture) }}" alt="logo" style="width: 30px; height: 30px;">&nbsp;
                            <span>{{ company.name }}</span>
                        </td>
                        <td class="text-center">{{ company.contract_count }}</td>
                        <td class="text-end">{{ company.total_amount|number_format(2, ',', ' ') }}â‚¬</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
